<!DOCTYPE html>
<html lang="es">

<head>
    <title>
        <%= apartment.title %> - Book Joy
    </title>
    <%- include('./partials/head.ejs') %>
</head>

<body>
    <header class="container-fluid py-3 bg-dark text-white">
        <%- include('./partials/header.ejs') %>
    </header>

    <main class="container my-5">

        <!-- T√≠tulo -->
        <h1 class="mb-4 text-center">
            <%= apartment.title %>
        </h1>

        <!-- Imagen principal -->
        <% const mainPhoto=apartment.photos?.find(p=> p.isMain) || apartment.photos?.[0]; %>
            <% if (mainPhoto) { %>
                <img src="<%= mainPhoto.url %>" alt="Foto principal del apartamento"
                    class="img-fluid rounded mb-4 w-100" style="max-height: 400px; object-fit: cover;">
                <% } %>

                    <div class="row">
                        <!-- Info general -->
                        <div class="col-md-8">
                            <h4>Descripci√≥n</h4>
                            <p>
                                <%= apartment.description || 'No disponible' %>
                            </p>

                            <h4>Reglas del apartamento</h4>
                            <p>
                                <%= apartment.rules || 'No especificadas' %>
                            </p>

                            <h4>Detalles</h4>
                            <ul class="list-group mb-3">
                                <li class="list-group-item"><strong>Precio:</strong> ‚Ç¨<%= apartment.price %> / noche
                                </li>
                                <li class="list-group-item"><strong>Superficie:</strong>
                                    <%= apartment.squareMeters %> m¬≤
                                </li>
                                <li class="list-group-item"><strong>Capacidad m√°xima:</strong>
                                    <%= apartment.maxGuests %> personas
                                </li>
                                <li class="list-group-item"><strong>Habitaciones:</strong>
                                    <%= apartment.rooms %>
                                </li>
                                <li class="list-group-item"><strong>Camas:</strong>
                                    <%= apartment.beds %>
                                </li>
                                <li class="list-group-item"><strong>Ba√±os:</strong>
                                    <%= apartment.bathrooms %>
                                </li>
                            </ul>

                            <h4>Servicios</h4>
                            <div class="d-flex flex-wrap gap-2 mb-4">
                                <% const s=apartment.services || {}; %>
                                    <% if (s.wifi) { %><span title="Wi-Fi">üì∂</span>
                                        <% } %>
                                            <% if (s.parking) { %><span title="Parking">üÖøÔ∏è</span>
                                                <% } %>
                                                    <% if (s.disability) { %><span title="Accesible">‚ôø</span>
                                                        <% } %>
                                                            <% if (s.airConditioning) { %><span title="A/C">‚ùÑÔ∏è</span>
                                                                <% } %>
                                                                    <% if (s.heating) { %><span
                                                                            title="Calefacci√≥n">üî•</span>
                                                                        <% } %>
                                                                            <% if (s.tv) { %><span title="TV">üì∫</span>
                                                                                <% } %>
                                                                                    <% if (s.kitchen) { %><span
                                                                                            title="Cocina">üç≥</span>
                                                                                        <% } %>
                                                                                            <% if (s.internet) { %><span
                                                                                                    title="Internet">üåê</span>
                                                                                                <% } %>
                            </div>

                            <h4>Ubicaci√≥n</h4>
                            <p>
                                <%= apartment.location?.city %>, <%= apartment.location?.province %>
                            </p>

                            <% if (apartment.location?.mapLink) { %>
                                <a href="<%= apartment.location.mapLink %>" target="_blank"
                                    class="btn btn-sm btn-outline-secondary">Ver en Google Maps</a>
                                <% } %>

                                    <% if (apartment.location?.gps?.lat && apartment.location?.gps?.lng) { %>
                                        <div class="mt-3">
                                            <iframe width="100%" height="300" frameborder="0" style="border:0"
                                                src="https://maps.google.com/maps?q=<%= apartment.location.gps.lat %>,<%= apartment.location.gps.lng %>&z=15&output=embed"
                                                allowfullscreen>
                                            </iframe>
                                        </div>
                                        <% } %>
                        </div>

                        <!-- Reservas -->
                        <div class="col-md-4">
                            <% if (isAuthenticated) { %>
                                <a href="/admin/apartment/<%= apartment._id %>/edit/"
                                    class="btn btn-warning w-100 mb-4">Editar apartamento</a>
                                <% } else { %>
                                    <div class="card">
                                        <div class="card-body">
                                            <h5 class="card-title">Reservar</h5>
                                            <form action="/apartment/reservation/new" method="post">
                                                <input type="hidden" name="idApartment" value="<%= apartment._id %>">

                                                <div class="mb-3">
                                                    <label for="email" class="form-label">Tu email</label>
                                                    <input type="email" name="email" id="email" class="form-control"
                                                        required>
                                                </div>

                                                <div class="mb-3">
                                                    <label for="startDate" class="form-label">Fecha de entrada</label>
                                                    <input type="date" name="startDate" id="startDate"
                                                        class="form-control" required>
                                                </div>

                                                <div class="mb-3">
                                                    <label for="endDate" class="form-label">Fecha de salida</label>
                                                    <input type="date" name="endDate" id="endDate" class="form-control"
                                                        required>
                                                </div>

                                                <button type="submit" class="btn btn-primary w-100">Reservar</button>
                                            </form>
                                        </div>
                                    </div>
                                    <% } %>

                                        <!-- Fechas ya reservadas -->
                                        <% if (apartment.reservations && apartment.reservations.length> 0) { %>
                                            <div class="card mt-4">
                                                <div class="card-body">
                                                    <h6>Fechas ya reservadas</h6>
                                                    <ul class="list-group list-group-flush">
                                                        <% apartment.reservations.forEach(r=> { %>
                                                            <li class="list-group-item">
                                                                <%= new Date(r.startDate).toLocaleDateString() %> ‚Üí <%=
                                                                        new Date(r.endDate).toLocaleDateString() %>
                                                            </li>
                                                            <% }) %>
                                                    </ul>
                                                </div>
                                            </div>
                                            <% } %>
                        </div>
                    </div>
    </main>
</body>

</html>